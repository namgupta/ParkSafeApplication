<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:paddingTop="10dp"
    android:layout_height="match_parent">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/location_short_information"
        android:layout_marginTop="10dp"
        android:padding="0dp">


        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:paddingTop="5dp"
            android:paddingBottom="0dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp">
            <TextView
                android:text="Month"
                android:textSize="14dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left" />


        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:background="@drawable/bottom_border"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            android:paddingRight="25dp"
            android:paddingLeft="25dp">
            <TextView
                android:text="October"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_weight="2"
                android:id="@+id/owners_hub_detail_month"
                android:gravity="left" />


        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:paddingTop="5dp"
            android:paddingBottom="0dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp">
            <TextView
                android:text="Park spaces used"
                android:textSize="14dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left" />


        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:background="@drawable/bottom_border"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            android:paddingRight="25dp"
            android:paddingLeft="25dp">
            <TextView
                android:text="10/20"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_weight="2"
                android:id="@+id/owners_hub_detail_spaces"
                android:gravity="left" />


        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:paddingTop="5dp"
            android:paddingBottom="0dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp">
            <TextView
                android:text="Amount Received"
                android:textSize="14dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left" />


        </TableRow>
        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:background="@drawable/bottom_border"
            android:paddingTop="5dp"
            android:paddingBottom="10dp"
            android:paddingRight="25dp"
            android:paddingLeft="25dp">
            <TextView
                android:text="600"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:layout_weight="2"
                android:id="@+id/owners_hub_detail_amount"
                android:gravity="left" />


        </TableRow>


    </TableLayout>


</LinearLayout>